{% extends '::base.html.twig' %}

{% block title %}Добавить школу{% endblock %}

{% block container %}
    <h3>Добавляем школу</h3>
    <div class="row">
        <div class="col-md-4">
            <form role="form" method="post">
                <div class="form-group">
                    <label for="name">Название</label>
                    <input name="title" type="text" required class="form-control" id="title" placeholder="Название школы">
                </div>
                <button type="submit" class="btn btn-default">Готово</button>
            </form>
        </div>
    </div>
{% endblock %}