{% extends '::base.html.twig' %}

{% block title %}CoolSchoolproject{% endblock %}
{% block container %}
    <div class="row">
        {% for school in schools %}
        <div class="col-sx-6 col-md-4">
            <div class="thumbnail">
                <img src="holder.js/300x300" alt="Здесь школьный логотип">
                <div class="caption">
                    <h3><a href="{{ path('santa_coolschool_school_show', {'slug': school.slug}) }}">{{ school.name }}</a></h3>
                    <h4>{{ school.type }} {{ school.number }}</h4>
                    <p>{{ school.description }}</p>
                    <div>
                        {% for specialization in school.specializations %}
                        <h5>{{ spec }}</h5>
                        {% endfor %}
                    </div>
                    <div>
                        <a href="#">Ученики</a> <span class="badge">{{ school.totalstudents }}</span>
                    </div>
                    <div>
                        <a href="#">Классы</a> <span class="badge">{{ school.totalclasses }}</span>
                    </div>
                </div>
              </div>
        </div>
            {#<div class="clearfix col-sx-6 col-md-4"></div>#}
        {% endfor %}
    </div>
    {% endblock %}