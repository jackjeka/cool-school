{% extends '::base.html.twig' %}

{% block title %}Добавить школу{% endblock %}

{% block container %}

    <form method="post" role="form">
        {{ form_errors(form) }}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <h3>Добавляем школу</h3>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                 {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(form.number) }}
            </div>
            <div class="form-group">
                {{ form_row(form.type) }}
            </div>
            <div class="form-group">
                {{ form_row(form.description) }}
            </div>
            {{ form_rest(form) }}
            <div>
                <input type="submit" value="Добавить">
            </div>
        </div>

    </form>
{% endblock %}