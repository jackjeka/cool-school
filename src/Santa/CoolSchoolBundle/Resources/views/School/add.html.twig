{% extends '::base.html.twig' %}

{% block title %}Добавить школу{% endblock %}

{% block container %}
    <h3>Добавляем школу</h3>

    <div class="col-lg-12">
            <form role="form" method="post">
                {{ form_widget(form.name, { 'attr': {'placeholder': 'Название школы'} }) }}
                <br>
                {{ form_widget(form.schoolNumber, { 'attr': {'placeholder': 'Номер школы'} }) }}
                <br>
                {{ form_widget(form.schoolType, { 'attr': {'placeholder': 'Тип учебного заведения'} }) }}
                <br>
                {{ form_widget(form.description, { 'attr': {'placeholder': 'Описание'} }) }}
                <br>
                <button type="submit" class="btn btn-default">Добавить</button>
            </form>
    </div>
{% endblock %}